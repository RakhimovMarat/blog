<% @article.each do |article| %>

<h2><%= article.title %></h2>

<p><%= article.text %></p>

<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
  <div class="btn-group me-2" role="group">
    <%= button_to 'Show', article_path(article), method: :get, class: "btn btn-outline-secondary" %>
  </div>

  <% if current_user.username == article.author %>

  <div class="btn-group me-2" role="group">
    <%= button_to 'Edit', edit_article_path(article), method: :get, class: "btn btn-outline-secondary" %>
  </div>
  <div class="btn-group" role="group">
    <%= button_to 'Delete', article_path(article), method: :delete, class: "btn btn-outline-danger" %>
  </div>

  <% end %>

</div>

<hr />

<% end %>