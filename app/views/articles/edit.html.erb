<h1>Edit article</h1>

<%= form_for :article, data: { turbo: false }, url: article_path(@article), method: :put do |f| %>

	<p>
		<%= f.label :title %> <br />
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %> <br />
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit 'Edit article', class: "btn btn-primary" %>
	</p>

<% end %>