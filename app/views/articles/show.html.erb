<h1><%= @article.title %></h1>

<p><%= @article.text %></p>
<br />

<h2>Comments:</h2>
<% @article.comments.each do |comment| %>
<p>
	<i><b><%= comment.author %></b> said:</i><br />
	<%= comment.body %>
</p>
<% end %>
<br />

<h2>Add comment:</h2>
<p>
<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :body %> <br />
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
</p>
