<% @article.each do |article| %>

<div class="card">
	<h2 class="card-header"><%= article.title %></h2>
	<div class="card-body">
  		<ul>

			<p class="card-text"><%= article.text %></p>

			<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
  				<div class="btn-group me-2" role="group">
    				<%= button_to 'Read more', article_path(article), method: :get, class: "btn btn-primary" %>
  				</div>

  				<% if article.author && current_user && article.author == current_user.username %>

  				<div class="btn-group me-2" role="group">
    				<%= button_to 'Edit', edit_article_path(article), method: :get, class: "btn btn-primary" %>
  				</div>
  				<div class="btn-group" role="group">
    				<%= button_to 'Delete', article_path(article), method: :delete, class: "btn btn-danger" %>
  				</div>

  				<% end %>
  		</ul>
  	</div>
	
</div>

<br />

<% end %>